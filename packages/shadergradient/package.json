{
  "name": "shadergradient",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist",
    "./*": "./dist/*",
    "./styles.css": "./dist/styles.css"
  },
  "license": "MIT",
  "scripts": {
    "build": "node ../../esmbuild/esmbuild build ./src dist && tailwindcss -i ./src/tailwind.css -o ./src/tailwind-compiled.css",
    "dev": "concurrently \"node ../../esmbuild/esmbuild serve ./src 8001\" \"tailwindcss -i ./src/tailwind.css -o ./src/tailwind-compiled.css --watch\"",
    "release": "yarn run build && mkdir -p release && cp -Rf dist release/$npm_package_name@$npm_package_version",
    "deploy": "yarn version; git push --tags; git push",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "@react-spring/three": "*",
    "@react-three/drei": "*",
    "@react-three/fiber": "*",
    "react": "*",
    "three": "*",
    "three-stdlib": "*"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "concurrently": "^7.2.2",
    "esbuild": "^0.16.9",
    "esbuild-plugin-glsl": "^1.1.0",
    "eslint": "^7.32.0",
    "eslint-config-custom": "workspace:*",
    "fs-extra": "^10.0.1",
    "globby": "^11.0.4",
    "node-sass": "^7.0.1",
    "postcss": "^8.3.5",
    "postcss-modules": "^4.3.1",
    "socket.io": "^4.5.0",
    "socket.io-client": "^4.5.0",
    "tailwind-config": "workspace:*",
    "tailwindcss": "^3.1.5",
    "tmp": "^0.2.1",
    "tsconfig": "workspace:*",
    "tsup": "^6.1.3",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "camera-controls": "^1.37.4",
    "query-string": "^7.1.1",
    "react-merge-refs": "^1.1.0",
    "zustand": "^4.1.5"
  }
}
